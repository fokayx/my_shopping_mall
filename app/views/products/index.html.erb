<h1>Hello</h1>

<%= session[:my_cart] %>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-6 col-md-4 product_item">
      <div class="thumbnail">
       <%= image_tag product.image %>
        <div class="caption">
          <h3><%= product.title %></h3>
          <p><%= product.description %></p>
          <%= link_to "放到購物車", add_cart_path(product.id), method: "post", class:'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

